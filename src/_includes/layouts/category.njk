{% extends 'layouts/base.njk' %}

{% block content %}
<div class="p-12 font-serif border-b border-gray-400">
    <div class="mt-2 font-bold text-4xl"> Tagged: {{ tag | capitalize }} </div>
</div>
<div class="p-12 pt-4 font-serif border-b border-gray-400">
    <dl>
    
        {% set taglist = collections[ tag ] %}

        {% for post in taglist | reverse %}
        <dd class="font-bold text-2xl mt-8">
            <a href="{{ post.url | url }}" class="">
                {{ post.data.title }}
            </a>
        </dd>
        <dt class="text-xl ml-8"> Mon 21 Sept, 2019 by Baru Ruru </dt>
        {%- endfor -%}
        
        
    </dl>
</div>
{% endblock %}